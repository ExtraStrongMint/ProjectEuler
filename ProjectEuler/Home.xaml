<Page x:Class="ProjectEuler.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectEuler"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Home">

    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Select a challenge" />
                <ComboBox Name="ChallengeSelector" Text="Choose A Challenge"></ComboBox>
                <Button Name="SolveChallenge" Content="Solve" Click="SolveChallenge_Click" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="Solution" Text="Solution" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Label Content="" Name="SpeedTimer" Visibility="Collapsed" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
